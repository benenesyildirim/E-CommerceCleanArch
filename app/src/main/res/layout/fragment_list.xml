<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.listing.ListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shopping_cart_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/shopping_item_design" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/cartLoadingGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loader_background_white"
        android:src="@drawable/cart_loader"
        />
</RelativeLayout>